---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasCareer = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
const hasCertificate = true; // 자격증 정보가 있으므로 항상 표시
const hasWorkExperience = siteConfig.workExperience && siteConfig.workExperience.length > 0;
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 hidden md:block transition-all duration-300"
>
  <nav class="max-w-7xl mx-auto px-8 py-4">
         <ul class="flex items-center gap-8 justify-center">
       <li>
         <a
           href="#about"
           class="text-gray-700 hover:text-black transition-colors font-medium text-xl"
         >
           About
         </a>
       </li>
               {
          hasEducation && (
            <li>
              <a
                href="#education"
                class="text-gray-700 hover:text-black transition-colors font-medium text-xl"
              >
                Education
              </a>
            </li>
          )
        }
               {
          hasCareer && (
            <li>
              <a
                href="#career"
                class="text-gray-700 hover:text-black transition-colors font-medium text-xl"
              >
                Career
              </a>
            </li>
          )
        }
        {
          hasWorkExperience && (
            <li>
              <a
                href="#work-experience"
                class="text-gray-700 hover:text-black transition-colors font-medium text-xl"
              >
                Work Experience
              </a>
            </li>
          )
        }
        {
          hasCertificate && (
            <li>
              <a
                href="#certificate"
                class="text-gray-700 hover:text-black transition-colors font-medium text-xl"
              >
                Certificate
              </a>
            </li>
          )
        }
       {
         hasProjects && (
           <li>
             <a
               href="#projects"
               class="text-gray-700 hover:text-black transition-colors font-medium text-xl"
             >
               Projects
             </a>
           </li>
         )
       }
     </ul>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 100) {
      header?.classList.add("bg-white/80", "backdrop-blur-sm");
    } else {
      header?.classList.remove("bg-white/80", "backdrop-blur-sm");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
