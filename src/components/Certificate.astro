---
import { siteConfig } from "../config";
const hasCertificate = true; // 자격증 정보가 있으므로 항상 표시
---

{
  hasCertificate && (
    <section id="certificate" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Certificate
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300">
              <div class="space-y-8">
                <!-- 전문자격 -->
                <div>
                  <h3 class="text-xl sm:text-2xl font-semibold text-gray-900">전문자격</h3>
                  <dl class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-x-8">
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">한국공인회계사</dt>
                      <dd class="text-sm sm:text-base text-gray-500">금융감독원</dd>
                    </div>
                  </dl>
                </div>

                <!-- IT -->
                <div class="border-t border-gray-100 pt-6">
                  <h3 class="text-xl sm:text-2xl font-semibold text-gray-900">IT</h3>
                  <dl class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-x-8">
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">CISA(예정)</dt>
                      <dd class="text-sm sm:text-base text-gray-500">ISACA</dd>
                    </div>
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">정보처리기사</dt>
                      <dd class="text-sm sm:text-base text-gray-500">한국산업인력공단</dd>
                    </div>
                  </dl>
                </div>

                <!-- Data -->
                <div class="border-t border-gray-100 pt-6">
                  <h3 class="text-xl sm:text-2xl font-semibold text-gray-900">Data</h3>
                  <dl class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-x-8">
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">빅데이터분석기사</dt>
                      <dd class="text-sm sm:text-base text-gray-500">한국데이터산업진흥원</dd>
                    </div>
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">ADsP</dt>
                      <dd class="text-sm sm:text-base text-gray-500">한국데이터산업진흥원</dd>
                    </div>
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">SQLD</dt>
                      <dd class="text-sm sm:text-base text-gray-500">한국데이터산업진흥원</dd>
                    </div>
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">재무빅데이터분석사 2급</dt>
                      <dd class="text-sm sm:text-base text-gray-500">한국공인회계사회</dd>
                    </div>
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">재무빅데이터분석사 1급</dt>
                      <dd class="text-sm sm:text-base text-gray-500">한국공인회계사회</dd>
                    </div>                    
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">DAsP(예정)</dt>
                      <dd class="text-sm sm:text-base text-gray-500">한국데이터산업진흥원</dd>
                    </div>
                  </dl>
                </div>

                <!-- 원가 -->
                <div class="border-t border-gray-100 pt-6">
                  <h3 class="text-xl sm:text-2xl font-semibold text-gray-900">원가</h3>
                  <dl class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-x-8">
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">원가분석사</dt>
                      <dd class="text-sm sm:text-base text-gray-500">한국원가관리협회</dd>
                    </div>
                    <div class="py-2 flex items-baseline justify-between md:justify-start md:gap-8">
                      <dt class="text-base sm:text-lg font-medium text-gray-900">국방원가관리사</dt>
                      <dd class="text-sm sm:text-base text-gray-500">방위산업진흥회</dd>
                    </div>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
