---
import { siteConfig } from "../config";
const hasCareer = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasCareer && (
    <section id="career" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Career
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              {siteConfig.experience.map((career, index) => (
                <div class="relative mb-12 last:mb-0">
                  {/* Timeline dot at top of card */}
                  <div
                    class={`absolute left-1/2 -top-2 w-4 h-4 border-2 rounded-full -translate-x-1/2 z-20 transition-all duration-300 ${
                      career.dateRange.includes('(現)') 
                        ? 'bg-white' 
                        : 'bg-gray-300'
                    }`}
                    style={career.dateRange.includes('(現)') 
                      ? `border-color: ${siteConfig.accentColor}; background-color: ${siteConfig.accentColor}` 
                      : 'border-color: #9ca3af; background-color: #9ca3af'
                    }
                  />

                  {/* Connecting line below card */}
                  {index < siteConfig.experience.length - 1 && (
                    <div class="absolute left-1/2 bottom-0 w-0.5 h-12 bg-gray-300 -translate-x-1/2 translate-y-full z-10" />
                  )}

                  {/* Career card */}
                  <div class={`rounded-lg shadow-sm border p-4 sm:p-5 md:p-6 hover:shadow-md transition-all duration-300 ${
                    career.dateRange.includes('(現)') 
                      ? 'bg-white border-gray-100' 
                      : 'bg-gray-50 border-gray-200 opacity-80'
                  }`}>
                    <div class="flex flex-row items-start justify-between mb-4">
                      <div class="flex-1 min-w-0">
                        <h3 class="text-lg sm:text-2xl font-semibold text-gray-900">
                          {career.title}
                        </h3>
                        <p
                          class="text-base sm:text-lg"
                          style={`color: ${siteConfig.accentColor}`}
                        >
                          {career.company}
                        </p>
                      </div>
                      <span class="text-sm sm:text-base text-gray-500 ml-4 flex-shrink-0">
                        {career.dateRange}
                      </span>
                    </div>

                    <ul class="space-y-2">
                      {career.bullets.map((bullet) => (
                        <li class="flex items-start">
                          <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                          <span class="text-sm sm:text-base text-gray-600">
                            {bullet}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
