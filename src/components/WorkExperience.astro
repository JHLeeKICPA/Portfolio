---
import { siteConfig } from "../config";
const hasWorkExperience = siteConfig.workExperience && siteConfig.workExperience.length > 0;
---

{
  hasWorkExperience && (
    <section id="work-experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Work Experience
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 gap-6">
              {siteConfig.workExperience.map((category) => (
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-all duration-300 hover:-translate-y-1">
                  {/* 카테고리 헤더 */}
                  <div class="flex items-center mb-4">
                    <div>
                      <h3 class="text-2xl font-bold text-gray-900">{category.category}</h3>
                      <p class="text-lg text-gray-600">{category.description}</p>
                    </div>
                  </div>

                  {/* 업무 항목들 */}
                  <div class="space-y-4">
                    {category.items.map((item) => (
                      <div class="border-l-3 border-gray-200 pl-4">
                        <h4 class="font-semibold text-gray-900 mb-2 text-xl">{item.role}</h4>
                        
                                                 {/* 클라이언트 태그들 */}
                         <div class="flex flex-wrap gap-2 mb-2">
                           {item.clients.map((client) => (
                             <span class="inline-block px-3 py-1 text-base font-medium bg-gray-100 text-gray-700 rounded-full border border-gray-200">
                               {client}
                             </span>
                           ))}
                         </div>

                        {/* 추가 노트 */}
                        {item.note && (
                          <p class="text-base text-gray-500 mt-2 italic">
                            {item.note}
                          </p>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<style>
  .border-l-3 {
    border-left-width: 3px;
  }
</style>
